# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/xrpl-medical-records

# XRPL Configuration
XRPL_NETWORK=wss://s.altnet.rippletest.net:51233
XRPL_TESTNET=true
PLATFORM_WALLET_SEED=
PLATFORM_WALLET_ADDRESS=

# Flare Network Configuration
FLARE_FDC_URL=https://fdc-api.flare.network
FLARE_API_KEY=
FLARE_TESTNET=true

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=xrpl-medical-records
AWS_ENDPOINT=

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_NFT_MINTING=true
ENABLE_FLARE_VERIFICATION=true
SKIP_PAYMENT_VERIFICATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@xrpl-medical.com

# Monitoring (optional)
SENTRY_DSN=
ANALYTICS_API_KEY=